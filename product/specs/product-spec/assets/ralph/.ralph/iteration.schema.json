{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RalphIterationResult",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "CONTINUE",
        "DONE",
        "GUTTER"
      ]
    },
    "summary": {
      "type": "string",
      "description": "1-3 sentences. What changed and why."
    },
    "checks": {
      "type": "object",
      "properties": {
        "ran": {
          "type": "boolean"
        },
        "passed": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "touched_files": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes_for_pin": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes_for_guardrails": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "status",
    "summary"
  ],
  "additionalProperties": true
}
