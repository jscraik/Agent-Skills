{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string" },
    "target": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "kind": { "type": "string" },
        "locator": { "type": "string" }
      },
      "required": ["id", "kind", "locator"]
    },
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["baseline", "stimulus"] },
          "probes": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["id", "type", "probes"]
      }
    }
  },
  "required": ["schema_version", "target", "runs"]
}
