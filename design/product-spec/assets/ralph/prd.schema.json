{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ralph PRD",
  "type": "object",
  "required": [
    "projectName",
    "branchName",
    "specRef",
    "userStories"
  ],
  "properties": {
    "projectName": {
      "type": "string",
      "minLength": 1
    },
    "branchName": {
      "type": "string",
      "minLength": 1
    },
    "specRef": {
      "type": "string",
      "minLength": 1
    },
    "generatedAt": {
      "type": "string"
    },
    "finalTests": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "userStories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "priority",
          "acceptanceCriteria",
          "status",
          "passes",
          "attempts"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^STORY-\\d{3,}$"
          },
          "title": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "minimum": 0
          },
          "acceptanceCriteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tests": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "open",
              "in_progress",
              "done",
              "blocked",
              "removed"
            ]
          },
          "passes": {
            "type": "boolean"
          },
          "startedAt": {
            "type": [
              "string",
              "null"
            ]
          },
          "completedAt": {
            "type": [
              "string",
              "null"
            ]
          },
          "attempts": {
            "type": "integer",
            "minimum": 0
          },
          "lastError": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
